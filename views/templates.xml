<odoo>
    <template id="shop_customer_info">
        <t t-call="website.layout">
            <!--<t t-set="pageName" t-value="'Order Information'"/>-->
            <t t-set="additional_title" t-value="'Order Information'"/>
            <!--<div id="wrap" class="oe_structure oe_empty"/>-->

            <div class="container mb-5">

                <form method="post" action="/order/information/process">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="row">
                        <div class="col-12 col-lg-8">

                            <!-- Breadcrumb -->
                            <div class="col-12 mt-5">
                                <div class="o_wizard d-flex flex-wrap justify-content-between justify-content-md-start my-3 my-sm-4">
                                    <div class="d-flex flex-column flex-md-row align-items-end align-items-md-start justify-content-center">

                                        <span class=" d-none d-md-flex no-decoration">
                                            <div class="d-flex align-items-center o_wizard_step_active fw-bold">
                                                <p class="o_wizard_steplabel text-center mb-0">
                                                    Cart
                                                </p>
                                                <span class="fa fa-angle-right d-inline-block align-middle mx-sm-3 text-muted fs-5"></span>
                                            </div>
                                        </span>
                                        <!--<span class="o_disabled d-none d-md-flex no-decoration">
                                            <div class="d-flex align-items-center text-muted">
                                                <p class="o_wizard_steplabel text-center mb-0">
                                                    Delivery
                                                </p>
                                                <span class="fa fa-angle-right d-inline-block align-middle mx-sm-3 text-muted fs-5"></span>
                                            </div>
                                        </span>-->
                                        <span class="o_disabled d-none d-md-flex no-decoration">
                                            <div class="d-flex align-items-center text-muted">
                                                <p class="o_wizard_steplabel text-center mb-0">
                                                    Order Information
                                                </p>
                                            </div>
                                        </span>

                                        <div class="d-flex d-md-none flex-column align-items-start">
                                            <div class="dropdown">
                                                <a class="dropdown-toggle fw-bold" role="button"
                                                   data-bs-toggle="dropdown"
                                                   aria-expanded="false" title="Steps">
                                                    Review Order
                                                </a>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <span class="dropdown-item fw-bold" title="Review Order">Review
                                                            Order</span>
                                                    </li><li>
                                                    <span class="dropdown-item text-muted o_disabled" title="Delivery">
                                                        Delivery</span>
                                                </li><li>
                                                    <span class="dropdown-item text-muted o_disabled" title="Payment">
                                                        Payment</span>
                                                </li>
                                                </ul>
                                            </div>
                                            <span class="d-inline-block d-md-none text-muted">
                                                Next: Delivery
                                            </span>
                                        </div>
                                    </div>
                                    <div class="o_wizard_circle_progress progress d-md-none position-relative rounded-circle ms-3 bg-transparent"
                                         style="--rightProgress:120.0deg; --leftProgress:0deg;">
                                        <span class="o_wizard_circle_progress_left position-absolute start-0 top-0 z-1 overflow-hidden w-50 h-100 ">
                                            <span class="progress-bar position-absolute start-100 top-0 w-100 h-100 border border-5 border-start-0 border-primary bg-transparent"></span>
                                        </span>
                                        <span class="o_wizard_circle_progress_right position-absolute top-0 end-0 z-1 overflow-hidden w-50 h-100">
                                            <span class="progress-bar position-absolute top-0 end-100 w-100 h-100 border border-5 border-end-0 border-primary bg-transparent"></span>
                                        </span>
                                        <p class="mx-auto fw-bold">
                                            1
                                            of
                                            3
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <h3>Order Information</h3>

                            <div class="row">
                                <div class="col">
                                    <div class="mt-3">
                                        <label>Your Name *</label>
                                        <input class="form-control"
                                               placeholder="Enter your name"
                                               name="name"
                                               t-att-value="pt.name if pt else None"
                                               required="1"/>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="mt-3">
                                        <label>Mobile *</label>
                                        <input class="form-control"
                                               name="mobile"
                                               placeholder="01731000000"
                                               t-att-value="pt.mobile if pt else None"
                                               required="1"/>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-3">
                                <label>Address *</label>
                                <textarea class="form-control"
                                          name="street"
                                          required="1"
                                ><t t-esc="pt.street if pt else None"/></textarea>
                            </div>

                            <!--<div class="text-end">
                                <button class="mt-2 btn btn-outline-primary btn-sm">
                                    Edit Address</button>
                            </div>-->

                            <!-- Delivery Method -->
                            <div class="mt-4">
                                <label>Delivery Method</label>
                                <t t-set="default_selected" t-value="False"/>
                                <t t-foreach="delivery_methods" t-as="dm">
                                    <t t-set="delivery_price" t-value="0"/>
                                    <t t-if="dm.delivery_type == 'fixed'">
                                        <t t-set="delivery_price" t-value="dm.fixed_price"/>
                                    </t>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="radio"
                                               name="delivery_method"
                                               t-att-value="dm.id"
                                               t-attf-id="delivery_method{{dm.id}}"
                                               t-att-data_price="delivery_price"
                                               t-att-checked="'checked' if not default_selected else None"/>
                                        <label class="form-check-label"
                                               t-attf-for="delivery_method{{dm.id}}"
                                        >
                                            <t t-esc="dm.name"/>
                                            (<span t-esc="delivery_price"
                                                   t-options='{"widget": "monetary", "display_currency": currency_id}'/>)
                                        </label>
                                    </div>
                                    <t t-set="default_selected" t-value="True"/>
                                </t>
                            </div>

                            <!-- Payment Method -->
                            <div class="mt-3">
                                <label>Payment Method</label>
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="radio"
                                           name="payment_method"
                                           value="cod"
                                           id="payment_method_1"
                                           checked="checked"/>
                                    <label class="form-check-label" for="payment_method_1">
                                        Cash On Delivery
                                    </label>
                                </div>
                                <!--<div class="form-check">
                                    <input class="form-check-input" type="radio" name="payment_method"
                                           id="payment_method_2"/>
                                    <label class="form-check-label" for="payment_method_2">
                                        SSLCommerz
                                    </label>
                                </div>-->
                            </div>

                        </div>

                        <!-- Right cart -->
                        <div class="col-12 col-lg-4 mt-5 pt-lg-5">
                            <input type="hidden" id="json_data" t-att-value="json_data"/>
                            <div class="card p-2">
                                <div class="card-body">
                                    <table class="w-100">
                                        <tr>
                                            <td class="pb-2">Delivery</td>
                                            <td class="pb-2 text-end" id="delivery_amount">0.00 ৳</td>
                                        </tr>
                                        <tr>
                                            <td class="pb-2">Subtotal</td>
                                            <td class="pb-2 text-end" id="subtotal_amount">500.00 ৳</td>
                                        </tr>
                                        <tr>
                                            <td class="pb-2">Taxes</td>
                                            <td class="pb-2 text-end" id="taxes_amount">0.00 ৳</td>
                                        </tr>
                                        <tr class="border-top">
                                            <td class="py-3">
                                                <b>Total</b>
                                            </td>
                                            <td class="text-end py-3">
                                                <b id="total_amount">500.00 ৳</b>
                                            </td>
                                        </tr>
                                        <!--<tr>
                                            <td colspan="3" class="text-end text-xl-end border-0 p-0">
                                                <span>
                                                    <div class="coupon_form">
                                                        <form method="post" name="coupon_code" action="/shop/pricelist">
                                                            <input type="hidden" name="csrf_token"
                                                                   t-att-value="request.csrf_token()"/>
                                                            <div class="input-group w-100 my-2">
                                                                <input name="promo" class="form-control" type="text"
                                                                       placeholder="Discount code..."/>
                                                                <a href="#" role="button"
                                                                   class="btn btn-secondary a-submit ps-2">Apply</a>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </span>
                                            </td>
                                        </tr>-->
                                    </table>

                                    <button type="submit" class="btn btn-primary w-100 my-4">Confirm Order</button>
                                    <div class="position-relative d-flex w-100 justify-content-center align-items-center my-2 opacity-75">
                                        <hr class="w-100"/>
                                        <span class="px-3">or</span>
                                        <hr class="w-100"/>
                                    </div>
                                    <a class="text-center d-block" href="/shop">
                                        <i class="fa fa-angle-left me-2 fw-light"></i>
                                        Continue shopping
                                    </a>

                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>

        </t>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="/jubba_website_extend/static/js/order-info.js"/>
    </template>
</odoo>